{
  "default": {
    "query": "?home",
    "composer": {
      "root": "./_pages",
      "header": "default",
      "footer": "default"
    },
    "page": {
      "composer": "default", 
      "title": "?", 
      "showTitle": true
    }
  },
  
  "composer": {

    "home": { 
      "root": "./_web/main",
      "header": "home",
      "footer": "minimal"
    },

    "internal": { 
      "root": "./_web/internal",
      "header": "minimal",
      "footer": "minimal"
    },

    "default": { "root": "./_web/main" },

    "worker": { 
      "root": "./_web/main",
      "header": "worker",
      "footer": "minimal"
    },

    "utils": { 
      "root": "./_web/utils",
      "header": "utils",
      "footer": "minimal",
      "resources": [
        { "type":"stylesheet", "file":"styles.css" },
        { "type":"script", "shared":true, "file":"app-sidebar.js" }
      ]
    }
  },

  "header": {

    "home": {
      "module": "./_web/module/header/default",
      "navbar": [
        "home",
        "portfolio",
        "services"
      ],
      "display": {
        "socials": false
      }
    },

    "default": {
      "module": "./_web/module/header/default",
      "navbar": [
        "home",
        "portfolio",
        "services"
      ],
      "social": [
        { "link": "email", "name": "gmail", "image":"gmail" },
        { "link": "url", "name": "linkedin", "image":"linkedin" },
        { "link": "url", "name": "github", "image":"github" },
        { "link": "url", "name": "artstation", "image":"artstation" },
        { "link": "url", "name": "sketchfab", "image":"sketchfab" }
      ]
    },
    
    "worker": {
      "module": "./_web/module/header/default",
      "navbar": [
        "home",
        "portfolio",
        "services"
      ],
      "social": [
        { "link": "email", "image":"gmail" },
        { "link": "url", "name": "linkedin", "image":"linkedin" },
        { "link": "url", "name": "github", "image":"github" },
        { "link": "url", "name": "artstation", "image":"artstation" },
        { "link": "url", "name": "sketchfab", "image":"sketchfab" }
      ]
    },

    "minimal": {
      "module": "./_web/module/header/default",
      "navbar": [
        "home"
      ],
      "display": {
        "socials": false
      }
    },

    "utils": {
      "module": "./_web/module/header/default",
      "navbar": [
        "home",
        "utils"
      ],
      "socials": [
        { "link": "url", "name": "github", "image":"github" },
        { "link": "url", "name": "linkedin", "image":"linkedin" },
        { "link": "email", "name": "gmail", "image":"gmail" }
      ]
    }
  },

  "footer": {

    "default": {
      "module": "./_web/module/footer/default"
    },

    "minimal": {
      "module": "./_web/module/footer/default",
      "display": {
        "links": false
      }
    }
  },

  "page": {

    "err404": { "composer": "internal", "title": "404" },
    
    "home": {
      "composer": "home",
      "title": "Home", "showTitle": false,
      "resources": [
        { "type":"stylesheet", "file":"styles.css" },
        { "type":"script", "file":"app.js" }
      ] 
    },

    "portfolio": { 
      "composer": "worker",
      "title": "Portfolio",
      "resources": [
        { "type":"script", "shared":true, "file":"app-sidebar.js" }
      ] 
    },
    
    "services": { 
      "composer": "worker",
      "title": "Services"
    },
    
    "projects": {
      "title": "Projects",
      "resources": [
        { "type":"script", "shared":true, "file":"app-sidebar.js" }
      ] 
    },
    
    "aboutme": { 
      "title": "About Me",
      "resources": [
        { "type":"script", "shared":true, "file":"app-sidebar.js" }
      ] 
    },
    
    "resumee": { 
      "title": "Resumee",
      "resources": [
        { "type":"stylesheet", "file":"styles.css" }
      ] 
    },
    
    "utils": { 
      "composer": "utils",
      "title": "Utils",
      "resources": [
        { "type":"script", "shared":true, "file":"app-sidebar.js" }
      ] 
    }
  },
  
  "project": {
  
    "rlam": {
      "relative": true,
      "location": "rlam-docs"
    }
  }
}